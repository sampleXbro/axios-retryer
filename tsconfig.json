{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "types": ["jest"],
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "declarationMap": false,
    "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "src/global-axios-augmentation.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
